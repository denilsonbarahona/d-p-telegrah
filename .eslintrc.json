{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "react/jsx-filename-extension": [0],
    "react/function-component-definition": [
      0,
      {
        "namedComponents": [
          "function-declaration",
          "function-expression",
          "arrow-function"
        ],
        "unnamedComponents": ["function-expression", "arrow-function"]
      }
    ],
    "arrow-body-style": [0, "as-needed"]
  },
  "parser": "@babel/eslint-parser",
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "src"],
          ["@Routes", "src/infrastructure/ui/routes"],
          ["@Redux", "src/infrastructure/redux"],
          ["@Images", "src/infrastructure/statics/images"],
          ["@UI-components", "src/infrastructure/ui/components"],
          ["@UI-containers", "src/infrastructure/ui/containers"],
          ["@UI-layouts", "src/infrastructure/ui/layouts"],
          ["@Style", "src/infrastructure/ui/styles"],
          ["@Style-components", "src/infrastructure/ui/styles/components"],
          ["@Style-containers", "src/infrastructure/ui/styles/containers"],
          ["@Style-layouts", "src/infrastructure/ui/styles/layouts"]
        ]
      }
    }
  }
}
