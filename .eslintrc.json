{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-param-reassign": ["error", { "props": false }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "react/jsx-filename-extension": [0],
    "react/function-component-definition": [
      0,
      {
        "namedComponents": [
          "function-declaration",
          "function-expression",
          "arrow-function"
        ],
        "unnamedComponents": ["function-expression", "arrow-function"]
      }
    ],
    "arrow-body-style": [0, "as-needed"]
  },
  "parser": "@babel/eslint-parser",
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"],
          ["@Routes", "./src/infrastructure/ui/routes"],
          ["@Redux", "./src/infrastructure/redux"],
          ["@Images", "./src/infrastructure/statics/images"],
          ["@atoms", "./src/infrastructure/ui/atoms"],
          ["@molecules", "./src/infrastructure/ui/molecules"],
          ["@organism", "./src/infrastructure/ui/organism"],
          ["@template", "./src/infrastructure/ui/templates"],
          ["@pages", "./src/infrastructure/ui/pages"],
          ["@Style", "./src/infrastructure/ui/styles"]
        ],
        "extensions": [".ts", ".js", ".jsx", ".json"]
      }
    }
  }
}
